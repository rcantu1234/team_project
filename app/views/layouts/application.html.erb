<!DOCTYPE html>
<html>
<head>
  <title>TeamProject</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class='container'>
  <div class='row'>
    <div class='col-md-12'>
      <p style='color: green;'><%= notice %></p>
      <p style='color: red;'><%= alert %></p>

      <nav class='navbar navbar-default'>
         <div class="container-fluid">
           <div class="navbar-header">
              <%= link_to 'ROEL&BUCKeGRAM', root_path, :class => 'navbar-brand' %>
           </div>
          <div class='table'>
            <ul class='nav navbar-nav'>
              <li class='active'><%= link_to 'HOME', user_images_path(:user_id) %></li>
              <li><%= link_to 'NEW USER', new_user_registration_path(@user) %></li>
              <li><%= link_to 'SIGN-IN', new_user_session_path %></li>
              <li><%= link_to 'SIGN-OUT', destroy_user_session_path(@user), method: :delete %></li>
            </ul>
          </div>
        </div>
      </nav>

      <%= yield %>
    </div>
  </div>
</div>

</body>
</html>
